@model IEnumerable<AssetManager.Models.Hostdetail>
@{
    ViewData["Title"] = "Host List";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Host Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            height: 100vh;
            background-color: #f9f9f9;
        }

        .sidebar {
            width: 220px;
            background-color: #f5f5f5;
            border-right: 1px solid #e0e0e0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar h2 {
                font-size: 18px;
                margin-bottom: 20px;
            }

        .nav-section {
            font-size: 12px;
            color: #888;
            margin-bottom: 10px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 8px 10px;
            margin-bottom: 10px;
            color: #333;
            text-decoration: none;
            border-radius: 6px;
            transition: background 0.2s;
        }

            .nav-link:hover,
            .nav-link.active {
                background-color: #e0e0e0;
            }

            .nav-link i {
                margin-right: 10px;
            }

        .settings {
            font-size: 14px;
            color: #555;
            display: flex;
            align-items: center;
        }

            .settings i {
                margin-right: 8px;
            }

        .main {
            flex: 1;
            padding: 40px;
            margin-left: 100px;
            margin-right: 100px;
            /* margin:100px; */
        }

            .main h2 {
                margin-bottom: 30px;
            }

        .form-grid {
            display: flex;
            gap: 0px;
            margin: 0px;
        }

        .form-group {
            margin-bottom: 20PX;
            /* margin-bottom: 0px; */
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

            input[type="text"]:focus,
            select:focus {
                border-color: #6c63ff;
                outline: none;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #6c63ff;
            color: white;
            font-weight: bold;
            text-align: center;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s;
        }

            .btn:hover {
                background-color: #574bfa;
            }

        .filter-form {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            align-items: center;
        }

            .filter-form input,
            .filter-form select,
            .filter-form button {
                padding: 8px 12px;
                font-size: 14px;
            }

            .filter-form button {
                background-color: #6c63ff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .filter-form button:hover {
                    background-color: #574bfa;
                }

        .host-table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }

            .host-table th,
            .host-table td {
                padding: 12px;
                border: 1px solid #ccc;
                text-align: left;
            }

            .host-table th {
                background-color: #f0f0f0;
            }

    </style>
</head>
<body>

    <div class="sidebar">
        <div>
            <h2>Host Management</h2>
            <div class="nav-section">GENERAL</div>
            <a href="@Url.Action("Hostview", "Home" )" class="nav-link active">Host</a>
            <a href="@Url.Action("Add", "Home")" class="nav-link">Add Host</a>
        </div>
        <div class="settings">
            ⚙️ Settings
        </div>
    </div>

    <div class="main">
        <h2>Host List</h2>

        <form method="get" class="filter-form">
            <input type="text" name="search" placeholder="Search..." value="@ViewBag.CurrentSearch" />
            <select name="group">
                <option value="">All Groups</option>
                @if (ViewBag.Groups != null)
                {
                    foreach (var g in ViewBag.Groups as List<string>)
                    {
                        <option value="@g" @(ViewBag.CurrentGroup == g ? "selected" : "")>@g</option>
                    }
                }
            </select>
            <button type="submit">Filter</button>
        </form>

        <table class="host-table">
            <thead>
                <tr>
                    <th>Device ID</th>
                    <th>Host Name</th>
                    <th>Host Group</th>
                    <th>MAC Address</th>
                    <th>IP Address</th>
                    <th>Host User</th>
                    <th>Host Status</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" style="text-align: center; color: gray;">No data found.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DeviceId</td>
                            <td>@item.HostName</td>
                            <td>@item.HostGroup</td>
                            <td>@item.MacAddress</td>
                            <td>@item.IpAddress</td>
                            <td>@item.HostUser</td>
                            <td>@item.HostStatus</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</body>
</html>


